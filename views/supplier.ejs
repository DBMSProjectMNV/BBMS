<%- include('partials/header'); %>
<title>Suppliers</title>
<%- include('partials/layout'); %>
<!-- ======= Breadcrumbs Section ======= -->
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>Suppliers</h2>
      <ol>
        <li><a href="/">Home</a></li>
        <li>Suppliers</li>
      </ol>
    </div>

  </div>
</section><!-- End Breadcrumbs Section -->
<main>
  <div class="container-flex">
    <h2>Suppliers</h2>
    <%- include('partials/alert') %>
    <div class="accordion" id="suppliers">
      <% for (let i = 0; i < suppliers.length; i++) { const sup = suppliers[i]; %>
        <div class="accordion-item">
          <p class="accordion-header" tabindex="0">
            <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#sup<%= i %>" aria-expanded="false" aria-controls="#sup<%= i %>" id="heading<%= i %>"><%= sup['Supplier_name'] %></button>
          </p>
          <div class="accordion-collapse collapse" id="sup<%= i %>" aria-labelledby="heading<%= i %>" data-bs-parent="#suppliers">
            <div class="accordion-body">
              <ul class="dll">
                <li><span>Name: </span><span><%= sup['Supplier_name'] %></span></li>
                <li><span>Contact: </span><span><%= sup['Supplier_contact'] %></span></li>
                <li><span>Email: </span><span><%= sup['Supplier_email'] %></span></li>
                <li><span>Address: </span><span><%= sup['Supplier_address'] %></span></li>
              </ul>
              <p class="row">
                <a href="/suppliers/edit?id=<%= sup['Supplier_id'] %>" class="button small col">Edit</a>
                <a href="/suppliers/delete?id=<%= sup['Supplier_id'] %>" class="button small col">Delete</a>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <div class="row">
      <a href="/suppliers/add" class="button">Add supplier</a>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
