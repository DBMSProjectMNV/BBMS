<%- include('partials/header'); %>
	<title>Add medicine</title>
	<link rel="stylesheet" href="/css/forms.css" />
	<script src="/js/forms.js" defer></script>
<%- include('partials/layout'); %>
<!-- ======= Breadcrumbs Section ======= -->
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>Add medicine</h2>
      <ol>
        <li><a href="/">Home</a></li>
				<li><a href="/inventory">Inventory</a></li>
        <li>Add medicine</li>
      </ol>
    </div>

  </div>
</section><!-- End Breadcrumbs Section -->
<main>
	<div class="form-container">
		<form action="/inventory/add" method="post">
			<div>
				<h2 class="center">Add Medicine</h2>
			</div>
			<%- include('partials/alert') %>
      <div>
        <div class="field">
          <label>
            <input type="text" name="name" placeholder="Medicine name" maxlength="40" <% if(locals.name){ %> value="<%= name %>" <% } %> />
            <span>Medicine name:</span>
          </label>
          <p><span class="error"></span><span class="counter"></span></p>
          <p><span class="hint"></span></p>
        </div>
      </div>
      <div>
        <div class="field">
          <label>
            <input type="number" name="mrp" placeholder="MRP" <% if(locals.mrp){ %> value="<%= mrp %>" <% } %> />
            <span>MRP:</span>
          </label>
          <p><span class="error"></span></p>
          <p><span class="hint"></span></p>
        </div>
      </div>
      <div>
        <div class="field">
          <label>
            <input type="number" name="stock" placeholder="Stock" <% if(locals.stock){ %> value="<%= stock %>" <% } %> />
            <span>Stock:</span>
          </label>
          <p><span class="error"></span></p>
          <p><span class="hint"></span></p>
        </div>
      </div>
      <div>
        <div class="field">
          <button class="button">Submit</button>
        </div>
      </div>
		</form>
	</div>
</main>
<%- include('partials/footer') %>
