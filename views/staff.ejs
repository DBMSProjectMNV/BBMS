<%- include('partials/header'); %>
<title>Staffs</title>
<%- include('partials/layout'); %>
<main>
  <div class="container-flex">
    <h2>Staffs</h2>
    <div class="accordion" id="staffs">
      <% for (let i = 0; i < staffs.length; i++) { const staff = staffs[i]; %>
        <div class="accordion-item">
          <p class="accordion-header" tabindex="0">
            <button type="button" class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#staff<%= i %>" aria-expanded="false" aria-controls="#staff<%= i %>" id="heading<%= i %>"><%= staff['Staff_name'] %></button>
          </p>
          <div class="accordion-collapse collapse" id="staff<%= i %>" aria-labelledby="heading<%= i %>" data-bs-parent="#staffs">
            <div class="accordion-body">
              <ul class="dll">
                <li><span>Name: </span><span><%= staff['Staff_name'] %></span></li>
                <li><span>Contact: </span><span><%= staff['Staff_contact'] %></span></li>
                <li><span>Email: </span><span><%= staff['Staff_email'] %></span></li>
                <li><span>Address: </span><span><%= staff['Staff_address'] %></span></li>
                <li><span>Job role: </span><span><%= staff['Job_role'] %></span></li>
                <li><span>Salary: </span><span><%= staff['Salary'] %></span></li>
              </ul>
              <p class="row">
                <a href="/staffs/edit?id=<%= staff['Staff_id'] %>" class="button small col">Edit</a>
                <a href="/staffs/delete?id=<%= staff['Staff_id'] %>" class="button small col">Delete</a>
              </p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <div class="row">
      <a href="/staffs/add" class="button">Add staff</a>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
