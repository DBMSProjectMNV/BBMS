<%- include('partials/header'); %>
<title>Staffs</title>
<%- include('partials/layout'); %>
<main>
  <div class="container-flex">
    <h2>Staffs</h2>
    <div class="accordion">
      <% for (const staff of staffs) { %>
        <div class="collapse">
          <p class="accordion-header" tabindex="0"><%= staff['Staff_name'] %></p>
          <div class="accordion-body">
            <ul class="dll">
              <li><span>Name: </span><span><%= staff['Staff_name'] %></span></li>
              <li><span>Contact: </span><span><%= staff['Staff_contact'] %></span></li>
              <li><span>Email: </span><span><%= staff['Staff_email'] %></span></li>
              <li><span>Address: </span><span><%= staff['Staff_address'] %></span></li>
              <li><span>Job role: </span><span><%= staff['Job_role'] %></span></li>
              <li><span>Salary: </span><span><%= staff['Salary'] %></span></li>
            </ul>
            <p class="row">
              <a href="/staffs/edit?id=<%= staff['Staff_id'] %>" class="button small">Edit</a>
              <a href="/staffs/delete?id=<%= staff['Staff_id'] %>" class="button small">Delete</a>
            </p>
          </div>
        </div>
      <% } %>
    </div>
    <div class="row">
      <a href="/staffs/add" class="button">Add staff</a>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
